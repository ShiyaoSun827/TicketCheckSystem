model WaitList {
  id        String     @id @default(uuid())
  userID    String
  showID    String
  status    WaitStatus @default(PENDING)
  createdAt DateTime   @default(now())

  // Relations
  user User @relation(fields: [userID], references: [id])
  show Show @relation(fields: [showID], references: [id])
}

model QRScanRecord {
